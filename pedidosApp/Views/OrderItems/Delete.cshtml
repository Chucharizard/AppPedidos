@model pedidosApp.Models.OrderItem

@{
    ViewData["Title"] = "Eliminar Detalle";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white py-4">
                    <div class="text-center">
                        <div style="font-size: 3rem; margin-bottom: 0.5rem;">⚠️🗑️</div>
                        <h3 class="mb-0">¿Eliminar Detalle?</h3>
                        <p class="mb-0 opacity-75">Esta acción no se puede deshacer</p>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="alert alert-warning" role="alert">
                        <div class="d-flex align-items-center">
                            <div style="font-size: 1.5rem; margin-right: 0.75rem;">⚠️</div>
                            <div>
                                <strong>¡Cuidado!</strong> Estás a punto de eliminar este item del pedido.
                                Esta acción afectará el total del pedido.
                            </div>
                        </div>
                    </div>

                    <div class="info-detalle-eliminar mb-4">
                        <h5 class="mb-4 text-center text-muted">🛒 Información del Item a Eliminar</h5>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong class="text-muted">📊 Cantidad:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span class="cantidad-destacada">@Model.Quantity unidades</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong class="text-muted">💰 Subtotal:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span class="precio-destacado">$@Model.Subtotal</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong class="text-muted">📋 Pedido:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span class="pedido-info">Pedido #@Model.OrderId</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong class="text-muted">📦 Producto:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span class="producto-info">Producto #@Model.ProductId</span>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-3">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg px-5"
                                onclick="return confirm('⚠️ ¿Estás completamente seguro de eliminar este item?')">
                            🗑️ Sí, Eliminar
                        </button>

                        <a asp-action="Index" class="btn btn-secondary btn-lg px-5">
                            ↩️ Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
        background: linear-gradient(135deg, #dc3545 0%, #a71e2a 100%);
    }

    .info-detalle-eliminar {
        background: #f8f9fc;
        border-radius: 15px;
        padding: 2rem;
        border: 2px solid #e3e6f0;
    }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .alert {
        border-radius: 15px;
        border: none;
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        border-left: 4px solid #ffc107;
    }

    .row {
        border-bottom: 1px solid #dee2e6;
        padding: 0.75rem 0;
    }

        .row:last-child {
            border-bottom: none;
        }

    .precio-destacado {
        color: #28a745;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .cantidad-destacada {
        color: #007bff;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .pedido-info, .producto-info {
        color: #6c757d;
        font-weight: 600;
    }
</style>
