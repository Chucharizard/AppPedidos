@model pedidosApp.Models.OrderItem

@{
    ViewData["Title"] = "Editar Detalle";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark py-4">
                    <div class="text-center">
                        <div style="font-size: 3rem; margin-bottom: 0.5rem;">✏️🛒</div>
                        <h3 class="mb-0">Editar Detalle de Pedido</h3>
                        <p class="mb-0 opacity-75">Modifica los elementos del pedido</p>
                    </div>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="info-detalle-actual mb-4">
                            <h6 class="text-muted">🛒 Información Actual:</h6>
                            <div class="datos-actuales">
                                <span class="dato-item">
                                    <strong>📊 Cantidad:</strong> @Model.Quantity unidades
                                </span>
                                <span class="dato-item">
                                    <strong>💰 Subtotal:</strong> $@Model.Subtotal
                                </span>
                                <span class="dato-item">
                                    <strong>📋 Pedido:</strong> #@Model.OrderId
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Quantity" class="form-label fw-bold">
                                    📊 Cantidad
                                </label>
                                <input asp-for="Quantity" type="number" min="1" class="form-control form-control-lg" placeholder="1" />
                                <small class="text-muted">💡 Número de unidades</small>
                                <span asp-validation-for="Quantity" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Subtotal" class="form-label fw-bold">
                                    💰 Subtotal
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Subtotal" type="number" step="0.01" class="form-control form-control-lg" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Subtotal" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="OrderId" class="form-label fw-bold">
                                    📋 ID del Pedido
                                </label>
                                <input asp-for="OrderId" class="form-control form-control-lg" placeholder="ID del pedido" />
                                <small class="text-muted">💡 Pedido al que pertenece</small>
                                <span asp-validation-for="OrderId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="ProductId" class="form-label fw-bold">
                                    📦 ID del Producto
                                </label>
                                <input asp-for="ProductId" class="form-control form-control-lg" placeholder="ID del producto" />
                                <small class="text-muted">💡 Producto a modificar</small>
                                <span asp-validation-for="ProductId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-grid gap-3 d-md-flex justify-content-md-center">
                                    <button type="submit" class="btn btn-warning btn-lg px-5 me-md-3">
                                        💾 Guardar Cambios
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary btn-lg px-5">
                                        ↩️ Volver a Detalles
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
        background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e3e6f0;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
            transform: translateY(-1px);
        }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .info-detalle-actual {
        background: #f8f9fc;
        border-radius: 15px;
        padding: 1.5rem;
        border: 2px solid #e3e6f0;
    }

    .datos-actuales {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .dato-item {
        flex: 1;
        min-width: 200px;
        padding: 0.5rem;
        background: white;
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }

    .input-group-text {
        background: #f8f9fc;
        border-color: #e3e6f0;
        color: #28a745;
        font-weight: bold;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
