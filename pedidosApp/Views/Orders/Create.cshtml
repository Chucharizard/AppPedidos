@model pedidosApp.Models.OrderModel

@{
    ViewData["Title"] = "Crear Pedido";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-4">
                    <div class="text-center">
                        <div style="font-size: 3rem; margin-bottom: 0.5rem;">📋➕</div>
                        <h3 class="mb-0">Crear Nuevo Pedido</h3>
                        <p class="mb-0 opacity-75">Registra un pedido en el sistema</p>
                    </div>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="OrderDate" class="form-label fw-bold">
                                    📅 Fecha del Pedido
                                </label>
                                <input asp-for="OrderDate" type="datetime-local" class="form-control form-control-lg" />
                                <small class="text-muted">💡 Fecha y hora del pedido</small>
                                <span asp-validation-for="OrderDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Status" class="form-label fw-bold">
                                    📊 Estado Inicial
                                </label>
                                <select asp-for="Status" class="form-select form-select-lg" asp-items="ViewBag.StatusList">
                                    <option value="">-- Seleccionar Estado --</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Total" class="form-label fw-bold">
                                    💰 Total del Pedido
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Total" type="number" step="0.01" class="form-control form-control-lg" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Total" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="UserId" class="form-label fw-bold">
                                    👤 ID del Cliente
                                </label>
                                <input asp-for="UserId" class="form-control form-control-lg" placeholder="Ingrese el ID del cliente" />
                                <small class="text-muted">💡 Identificador único del cliente</small>
                                <span asp-validation-for="UserId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="info-ayuda mb-4">
                            <h6 class="text-muted">💡 Información de Estados:</h6>
                            <div class="estados-info">
                                <span class="estado-explicacion">
                                    <span class="badge bg-warning">⏳ Pendiente</span> - Pedido recibido, en espera
                                </span>
                                <span class="estado-explicacion">
                                    <span class="badge bg-info">🚚 Enviado</span> - Pedido en camino
                                </span>
                                <span class="estado-explicacion">
                                    <span class="badge bg-success">✅ Completado</span> - Pedido entregado
                                </span>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-grid gap-3 d-md-flex justify-content-md-center">
                                    <button type="submit" class="btn btn-primary btn-lg px-5 me-md-3">
                                        💾 Crear Pedido
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary btn-lg px-5">
                                        ↩️ Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e3e6f0;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            transform: translateY(-1px);
        }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .form-label {
        color: #5a5c69;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .alert {
        border-radius: 10px;
        border: none;
    }

    .info-ayuda {
        background: #f8f9fc;
        border-radius: 15px;
        padding: 1.5rem;
        border: 2px solid #e3e6f0;
    }

    .estados-info {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .estado-explicacion {
        flex: 1;
        min-width: 200px;
        padding: 0.5rem;
        background: white;
        border-radius: 8px;
        border: 1px solid #dee2e6;
        font-size: 0.9rem;
    }

    .input-group-text {
        background: #f8f9fc;
        border-color: #e3e6f0;
        color: #007bff;
        font-weight: bold;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
