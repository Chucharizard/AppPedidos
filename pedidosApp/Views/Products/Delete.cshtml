@model pedidosApp.Models.ProductModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white py-4">
                    <div class="text-center">
                        <div style="font-size: 3rem; margin-bottom: 0.5rem;">⚠️🗑️</div>
                        <h3 class="mb-0">¿Eliminar Producto?</h3>
                        <p class="mb-0 opacity-75">Esta acción no se puede deshacer</p>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="alert alert-warning" role="alert">
                        <div class="d-flex align-items-center">
                            <div style="font-size: 1.5rem; margin-right: 0.75rem;">⚠️</div>
                            <div>
                                <strong>¡Cuidado!</strong> Estás a punto de eliminar este producto del inventario.
                                Esta acción no se puede revertir.
                            </div>
                        </div>
                    </div>

                    <div class="info-producto-eliminar mb-4">
                        <h5 class="mb-4 text-center text-muted">📦 Información del Producto a Eliminar</h5>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong class="text-muted">📦 Nombre:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span class="fw-bold">@Model.Name</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong class="text-muted">📝 Descripción:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span>@Model.Description</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong class="text-muted">💰 Precio:</strong>
                            </div>
                            <div class="col-sm-8">
                                <span class="precio-destacado">$@Model.Price</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <strong class="text-muted">📊 Stock:</strong>
                            </div>
                            <div class="col-sm-8">
                                @if (Model.Stock == 0)
                                {
                                    <span class="badge bg-danger fs-6">🚫 Sin Stock</span>
                                }
                                else if (Model.Stock <= 5)
                                {
                                    <span class="badge bg-warning fs-6">⚠️ @Model.Stock unidades</span>
                                }
                                else
                                {
                                    <span class="badge bg-success fs-6">✅ @Model.Stock unidades</span>
                                }
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-3">
                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-danger btn-lg px-5"
                                onclick="return confirm('⚠️ ¿Estás completamente seguro de eliminar este producto?')">
                            🗑️ Sí, Eliminar
                        </button>

                        <a asp-action="Index" class="btn btn-secondary btn-lg px-5">
                            ↩️ Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
        background: linear-gradient(135deg, #dc3545 0%, #a71e2a 100%);
    }

    .info-producto-eliminar {
        background: #f8f9fc;
        border-radius: 15px;
        padding: 2rem;
        border: 2px solid #e3e6f0;
    }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .btn-danger:hover {
        background-color: #a71e2a;
        border-color: #a71e2a;
    }

    .alert {
        border-radius: 15px;
        border: none;
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        border-left: 4px solid #ffc107;
    }

    .row {
        border-bottom: 1px solid #dee2e6;
        padding: 0.75rem 0;
    }

        .row:last-child {
            border-bottom: none;
        }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }

    .precio-destacado {
        color: #28a745;
        font-weight: bold;
        font-size: 1.1rem;
    }
</style>
