@model pedidosApp.Models.ProductModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark py-4">
                    <div class="text-center">
                        <div style="font-size: 3rem; margin-bottom: 0.5rem;">✏️📦</div>
                        <h3 class="mb-0">Editar Producto</h3>
                        <p class="mb-0 opacity-75">Modifica la información del producto</p>
                    </div>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="info-producto-actual mb-4">
                            <h6 class="text-muted">📋 Información Actual:</h6>
                            <div class="datos-actuales">
                                <span class="dato-item">
                                    <strong>📦 Producto:</strong> @Model.Name
                                </span>
                                <span class="dato-item">
                                    <strong>💰 Precio:</strong> $@Model.Price
                                </span>
                                <span class="dato-item">
                                    <strong>📊 Stock:</strong>
                                    @if (Model.Stock == 0)
                                    {
                                        <span class="badge bg-danger">🚫 Sin Stock</span>
                                    }
                                    else if (Model.Stock <= 5)
                                    {
                                        <span class="badge bg-warning">⚠️ @Model.Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">✅ @Model.Stock</span>
                                    }
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Name" class="form-label fw-bold">
                                    📦 Nombre del Producto
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="Nombre del producto" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Price" class="form-label fw-bold">
                                    💰 Precio
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control form-control-lg" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Description" class="form-label fw-bold">
                                    📝 Descripción
                                </label>
                                <textarea asp-for="Description" class="form-control form-control-lg" rows="3" placeholder="Describe el producto..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Stock" class="form-label fw-bold">
                                    📊 Cantidad en Stock
                                </label>
                                <input asp-for="Stock" type="number" class="form-control form-control-lg" placeholder="0" min="0" />
                                <small class="text-muted">💡 Cantidad disponible para venta</small>
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-grid gap-3 d-md-flex justify-content-md-center">
                                    <button type="submit" class="btn btn-warning btn-lg px-5 me-md-3">
                                        💾 Guardar Cambios
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary btn-lg px-5">
                                        ↩️ Volver a Productos
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
        background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e3e6f0;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
            transform: translateY(-1px);
        }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .form-label {
        color: #5a5c69;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .alert {
        border-radius: 10px;
        border: none;
    }

    .info-producto-actual {
        background: #f8f9fc;
        border-radius: 15px;
        padding: 1.5rem;
        border: 2px solid #e3e6f0;
    }

    .datos-actuales {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .dato-item {
        flex: 1;
        min-width: 200px;
        padding: 0.5rem;
        background: white;
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.4rem 0.8rem;
    }

    .input-group-text {
        background: #f8f9fc;
        border-color: #e3e6f0;
        color: #28a745;
        font-weight: bold;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
