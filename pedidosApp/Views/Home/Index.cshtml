    <!-- Scripts -->
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
   
                showToast('✅ Copiado: ' + text);
            });
        }

        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'custom-toast';
            toast.innerHTML = message;
            document.body.appendChild(toast);

            setTimeout(() => toast.classList.add('show'), 100);
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => document.body.removeChild(toast), 300);
            }, 2000);
        }

        window.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const email = urlParams.get('email');
            const password = urlParams.get('password');

            if (email || password) {
                setTimeout(() => {
                    if (email) {
                        const emailField = document.querySelector('input[name="Input.Email"]');
                        if (emailField) {
                            emailField.value = email;
                            emailField.style.background = '#e8f5e8';
                            emailField.style.borderColor = '#28a745';
                        }
                    }

                    if (password) {
                        const passwordField = document.querySelector('input[name="Input.Password"]');
                        if (passwordField) {
                            passwordField.value = password;
                            passwordField.style.background = '#e8f5e8';
                            passwordField.style.borderColor = '#28a745';
                            passwordField.type = 'text';

                            setTimeout(() => {
                                passwordField.type = 'password';
                            }, 3000);
                        }
                    }

                    if (email && password) {
                        const loginButton = document.querySelector('button[type="submit"]');
                        if (loginButton) {
                            loginButton.classList.add('btn-success');
                            loginButton.innerHTML = '🚀 ¡Todo Listo! - Log in';
                            loginButton.focus();
                        }
                    }
                }, 500);
            }
        });
    </script>


