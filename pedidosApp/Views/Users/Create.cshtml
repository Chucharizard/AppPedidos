@model pedidosApp.Models.User

@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-4">
                    <div class="text-center">
                        <div style="font-size: 3rem; margin-bottom: 0.5rem;">👤➕</div>
                        <h3 class="mb-0">Crear Nuevo Usuario</h3>
                        <p class="mb-0 opacity-75">Completa la información del usuario</p>
                    </div>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Name" class="form-label fw-bold">
                                    👤 Nombre Completo
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="Ingrese el nombre completo" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Email" class="form-label fw-bold">
                                    📧 Correo Electrónico
                                </label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="ejemplo@correo.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Password" class="form-label fw-bold">
                                    🔒 Contraseña
                                </label>
                                <div class="input-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Contraseña segura" id="passwordInput" />
                                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                                        <span id="eyeIcon">👁️</span>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Role" class="form-label fw-bold">
                                    🛡️ Rol del Usuario
                                </label>
                                <select asp-for="Role" class="form-select form-select-lg">
                                    <option value="">-- Seleccionar Rol --</option>
                                    <option value="Admin">👑 Administrador</option>
                                    <option value="Empleado">👨‍💼 Empleado</option>
                                    <option value="Cliente">👤 Cliente</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-grid gap-3 d-md-flex justify-content-md-center">
                                    <button type="submit" class="btn btn-primary btn-lg px-5 me-md-3">
                                        💾 Crear Usuario
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary btn-lg px-5">
                                        ⬅️ Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 20px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: none;
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #e3e6f0;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
            transform: translateY(-1px);
        }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .form-label {
        color: #5a5c69;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .alert {
        border-radius: 10px;
        border: none;
    }
</style>

<script>
    function togglePassword() {
        const passwordInput = document.getElementById('passwordInput');
        const eyeIcon = document.getElementById('eyeIcon');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            eyeIcon.textContent = '🙈';
        } else {
            passwordInput.type = 'password';
            eyeIcon.textContent = '👁️';
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
